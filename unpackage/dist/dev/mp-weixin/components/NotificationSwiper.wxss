
.uni-margin-wrap {
	width: 690rpx;
	width: 100%;
}
.swiper {
	height: 350rpx;
}
.swiper-item {
	height: 300rpx;
	line-height: 300rpx;
}
.swiper-list {
	margin-top: 40rpx;
	margin-bottom: 0;
}
.uni-common-mt {
	margin-top: 60rpx;
	position: relative;
}
.info {
	position: absolute;
	right: 20rpx;
}
.text-cut-box {
	display: -webkit-box;
	/*设置为弹性盒子*/
	-webkit-line-clamp: 3;
	/*最多显示x行*/
	overflow: hidden;
	/*超出隐藏*/
	text-overflow: ellipsis;
	/*超出显示为省略号*/
	-webkit-box-orient: vertical;
}
.uni-padding-wrap {
	width: 550rpx;
	padding: 0 100rpx;
}

